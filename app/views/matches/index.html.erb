<div style="padding: 10px">
		<h3 align="center"><code>All Matches</code></h3>
		<div class="table-responsive">
			<table id="table_player" class="table table-striped table-bordered">
				<thead style="color: green">
					<tr>
						<th>Match Code</th>
						<th>Tournament</th>
						<th>Group</th>
						<th>Player 1</th>
						<th>Player 2</th>
						<th>Result</th>
						<th>Venue</th>
						<th>Time</th>
						<th>Date</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% @matches.each do |match| %>
						<tr>
							<td>
								<span match_id="<%= match.id %>" data-name="name" class="matches" data-type="text" data-pk="1" data-title="Enter match code"><%= match.name %></span>
							</td>

							<td>
								<span match_id="<%= match.id %>" data-name="tournament_id" class="tournament_group" data-type="select" data-pk="2" data-title="Enter name"><%= match.tournament.name %></span>
							</td>

							<td>
								<span match_id="<%= match.id %>" data-name="group_id" class="match_group" data-type="select" data-pk="2" data-title="Enter name"><%= match.group.name %></span>
							</td>
							
							<td>
								<span match_id="<%= match.id %>" data-name="player_id1" class="player_1" data-type="select" data-pk="2" data-title="Enter name"><%= Player.find(match.player_id1).name %></span>
							</td>

							<td>
								<span match_id="<%= match.id %>" data-name="player_id2" class="player_2" data-type="select" data-pk="2" data-title="Enter name"><%= Player.find(match.player_id2).name %></span>
							</td>

							<td>
							<span match_id="<%= match.id %>" data-name="result" class="result" data-type="text" data-pk="2" data-title="Enter name"><%= match.result %></span>
							</td>
							
							<td>
								<span match_id="<%= match.id %>" data-name="venue_id" class="venue" data-type="select" data-pk="2" data-title="Enter name"><%= match.venue.name %></span>
							</td>
							
							<td>
								<span match_id="<%= match.id %>" data-name="time" class="time" data-type="text" data-pk="2" data-title="Enter name"><%= match.time.strftime("%T") %></span>
							</td>

							<td>
								<span match_id="<%= match.id %>" data-name="date" class="date" data-type="text" data-pk="2" data-title="Enter name"><%= match.date.strftime("%d-%m-%Y") %></span>
							</td>


							<td id="<%= match.id %>" class="delete_match">Delete</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<h4 align="center"><code><%= link_to "New Match", new_match_path %></code></h4>

</div>

<%= render "edit_matches" %>