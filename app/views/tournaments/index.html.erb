<div style="padding: 10px">
		<h3 align="center"><code>All tournaments</code></h3>
		<div class="table-responsive">
			<table id="table_tournament" class="table table-striped table-bordered">
				<thead style="color: green">
					<tr>
						<th >Name</th>
						<th >Created at</th>
						<th>Action</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% @tournaments.each do |tour| %>
						<tr>
							<td>
								<span tour_id="<%= tour.id %>" data-name="name" class="tournaments" data-type="text" data-pk="1" data-title="Enter name"><%= tour.name %></span>
							</td>
							<td><%= tour.created_at %></td>
							<td id="<%= tour.id %>" class="delete_tournament">Delete</td>
							<td ><%= link_to "Show", tournament_path(tour) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>

</div>