<div style="padding: 10px">
		<h3 align="center"><code>All matches of <%= @tournament.name %></code></h3>
		<div class="table-responsive">
			<table id="table_player" class="table table-striped table-bordered">
				<thead style="color: green">
					<tr>
						<th>Match Code</th>
						<th>Tournament</th>
						<th>Group</th>
						<th>Player 1</th>
						<th>Player 2</th>
						<th>Result</th>
						<th>Venue</th>
						<th>Time</th>
						<th>Date</th>
					</tr>
				</thead>
				<tbody>
					<% @matches.each do |match| %>
						<% result = match.result.split("-") if match.result.include? "-"  %>
						<tr>
							<td>
								<span match_id="<%= match.id %>" data-name="name" class="matches" data-type="text" data-pk="1" data-title="Enter match code"><%= match.name %></span>
							</td>

							<td>
								<span match_id="<%= match.id %>" data-name="tournament_id" class="tournament_group" data-type="select" data-pk="2" data-title="Enter name"><%= match.tournament.name %></span>
							</td>

							<td>
								<span match_id="<%= match.id %>" data-name="group_id" class="match_group" data-type="select" data-pk="2" data-title="Enter name"><%= match.group.name %></span>
							</td>
							
							<% if result[0] > result[1] %>
								<td>
									<% if Player.find(match.player_id1).nil? %>
									<% else %>
										<strong><span match_id="<%= match.id %>" data-name="player_id1" class="player_1" data-type="select" data-pk="2" data-title="Enter name"><%= Player.find(match.player_id1).name %></span></strong>
									<% end %>
								</td>

								<td>
									<% if Player.find(match.player_id2).nil? %>
									<% else %>
										<span match_id="<%= match.id %>" data-name="player_id2" class="player_2" data-type="select" data-pk="2" data-title="Enter name"><%= Player.find(match.player_id2).name %></span>
									<% end %>
								</td>
							<% elsif result[0] < result[1] %>
								<td>
									<% if Player.find(match.player_id1).nil? %>
									<% else %>
										<span match_id="<%= match.id %>" data-name="player_id1" class="player_1" data-type="select" data-pk="2" data-title="Enter name"><%= Player.find(match.player_id1).name %></span>
									<% end %>
								</td>

								<td>
									<% if Player.find(match.player_id2).nil? %>
									<% else %>
										<strong><span match_id="<%= match.id %>" data-name="player_id2" class="player_2" data-type="select" data-pk="2" data-title="Enter name"><%= Player.find(match.player_id2).name %></span></strong>
									<% end %>
								</td>
							<% else %>
								<td>
									<% if Player.find(match.player_id1).nil? %>
									<% else %>
										<span match_id="<%= match.id %>" data-name="player_id1" class="player_1" data-type="select" data-pk="2" data-title="Enter name"><%= Player.find(match.player_id1).name %></span>
									<% end %>
								</td>

								<td>
									<% if Player.find(match.player_id2).nil? %>
									<% else %>
										<span match_id="<%= match.id %>" data-name="player_id2" class="player_2" data-type="select" data-pk="2" data-title="Enter name"><%= Player.find(match.player_id2).name %></span>
									<% end %>
								</td>
							<% end %>
							<td>
							<span match_id="<%= match.id %>" data-name="result" class="result" data-type="text" data-pk="2" data-title="Enter result"><%= match.result %></span>
							</td>
							
							<td>
								<span match_id="<%= match.id %>" data-name="venue_id" class="venue" data-type="select" data-pk="2" data-title="Enter name"><%= match.venue.name %></span>
							</td>
							
							<td>
								<span match_id="<%= match.id %>" data-name="time" class="time" data-type="text" data-pk="2" data-title="Enter time"><%= match.time.strftime("%T") %></span>
							</td>

							<td>
								<span match_id="<%= match.id %>" data-name="date" class="date" data-type="text" data-pk="2" data-title="Enter date"><%= match.date.strftime("%d-%m-%Y") %></span>
							</td>


						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
</div>